{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem; height: 15rem; m-10">
            <div class="card-body">
                <h2 class="card-title">{{ article.titre }}</h2>
                <p class="card-text">{{ article.texte }}</p>
                <p class="card-text">{{ article.date|date('H-m-s') }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
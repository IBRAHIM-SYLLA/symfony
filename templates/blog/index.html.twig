{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row d-flex justify-content-around" style="margin: 20px">
        {# <div class=""> #}
            {% for article in articles %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                <h5 class="card-title">{{ article.title }}</h5>
                <p class="card-text">{{ article.article }}.</p>
                <a href="{{path('article', {"id": article.id}) }}" class="btn btn-primary">Voir l'article</a>
                </div>
            </div>
            {% endfor %}
        {# </div> #}
    </div>
</div>
{% endblock %}
